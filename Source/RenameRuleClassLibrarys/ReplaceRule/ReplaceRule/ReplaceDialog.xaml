<UserControl x:Class="ReplaceRule.ReplaceDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReplaceRule"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas>
        <TextBlock Text="Replace" FontWeight="SemiBold" Canvas.Left="110" Canvas.Top="5" FontSize="20"/>
        <StackPanel Canvas.Left="10" Canvas.Top="40" Orientation="Horizontal">
            <Label Content="_From:" FontSize="14" Width="50"/>
            <TextBox Name="replaceFromTextbox" Width="200" Height="30"/>
        </StackPanel>

        <StackPanel Canvas.Left="10" Canvas.Top="80" Orientation="Horizontal">
            <Label Content="_To:" FontSize="14" Width="50"/>
            <TextBox Name="replaceToTextbox" Width="200" Height="30"/>
        </StackPanel>
        <Button Name="okButton" Width="80" Height="25" Content="OK" Click="okButton_Click" Canvas.Left="65" Canvas.Top="160"/>
        <Button Content="Cancel" Width="80" Height="25" IsCancel="True" Canvas.Left="180" Canvas.Top="160" />
    </Canvas>
</UserControl>

