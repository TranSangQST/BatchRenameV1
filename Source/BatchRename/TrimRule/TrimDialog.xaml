<UserControl x:Class="TrimRule.TrimDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrimRule"
             mc:Ignorable="d" 
           d:DesignHeight="450" d:DesignWidth="800">
    <Canvas>
        <TextBlock Text="Trim" FontWeight="SemiBold" Canvas.Left="50" Canvas.Top="5" FontSize="20"/>
        <StackPanel Canvas.Left="10" Canvas.Top="40" Orientation="Vertical" >
            <Label FontWeight="Bold">Type of trim</Label>
            <RadioButton GroupName="trimTypeRBtn" Content="Remove first and last space"  Name="trimTypeRBtn0"/>
            <RadioButton GroupName="trimTypeRBtn" Content="Remove all space" Name="trimTypeRBtn1"></RadioButton>
        </StackPanel>
        <Button Name="okButton" Width="80" Height="25" Content="OK" Click="okButton_Click"  Canvas.Left="10" Canvas.Top="160"/>
        <Button Content="Cancel" Width="80" Height="25" IsCancel="True" Canvas.Left="120" Canvas.Top="160" />


    </Canvas>
</UserControl>
